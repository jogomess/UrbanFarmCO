@page
@model UrbanFarmCOWeb.Pages.Produtos.ProdutoIndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Produtos";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].NomeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].FornecedorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].DataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FornecedorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProdutoID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProdutoID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProdutoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
