@page
@model UrbanFarmCOWeb.Pages.Produtos.CreateModel

@{
    ViewData["Title"] = "Cadastrar Produto";
    Layout = "_Layout";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center my-4">Cadastro de Produto</h2>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Produto.NomeProduto" class="form-label">Nome do Produto</label>
                    <input asp-for="Produto.NomeProduto" class="form-control" />
                    <span asp-validation-for="Produto.NomeProduto" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Produto.Categoria" class="form-label">Categoria</label>
                    <input asp-for="Produto.Categoria" class="form-control" />
                    <span asp-validation-for="Produto.Categoria" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Produto.Preco" class="form-label">Preço</label>
                    <input asp-for="Produto.Preco" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Produto.Preco" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Produto.Quantidade" class="form-label">Quantidade</label>
                    <input asp-for="Produto.Quantidade" type="number" class="form-control" />
                    <span asp-validation-for="Produto.Quantidade" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Produto.FornecedorID" class="form-label">Fornecedor</label>
                    <select asp-for="Produto.FornecedorID" class="form-control">
                        <option value="">Selecione um fornecedor</option>
                        <!-- Aqui você deve preencher as opções com os fornecedores disponíveis -->
                    </select>
                    <span asp-validation-for="Produto.FornecedorID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Produto.DataCadastro" class="form-label">Data de Cadastro</label>
                    <input asp-for="Produto.DataCadastro" type="date" class="form-control" />
                    <span asp-validation-for="Produto.DataCadastro" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-secondary ms-2">Voltar para Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
