@page
@model UrbanFarmCOWeb.Pages.Funcionarios.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Funcionarios";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Funcao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].SenhaHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].DataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Funcionario) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenhaHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FuncionarioID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FuncionarioID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FuncionarioID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
