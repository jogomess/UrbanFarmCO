@page
@model UrbanFarmCOWeb.Pages.Funcionarios.IndexModel

@{
    ViewData["Title"] = "Funcionários";
    Layout = "_Layout";
}

<div class="container my-4">
    <div class="row">
        <div class="col">
            <h2 class="text-center">Gerenciar Funcionários</h2>
            <p>
                <a asp-page="Create" class="btn btn-primary mb-3">Criar Novo Funcionário</a>
            </p>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Funcionario[0].Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Funcionario[0].CPF)</th>
                        <th>@Html.DisplayNameFor(model => model.Funcionario[0].DataNascimento)</th>
                        <th>@Html.DisplayNameFor(model => model.Funcionario[0].Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Funcionario[0].Funcao)</th>
                        <th>@Html.DisplayNameFor(model => model.Funcionario[0].DataCadastro)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Funcionario)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.CPF)</td>
                            <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Funcao)</td>
                            <td>@Html.DisplayFor(modelItem => item.DataCadastro)</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.FuncionarioID" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-page="./Details" asp-route-id="@item.FuncionarioID" class="btn btn-info btn-sm">Detalhes</a>
                                <a asp-page="./Delete" asp-route-id="@item.FuncionarioID" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="mt-4">  
                <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Page("/Dashboard/Dashboard")'">Voltar para Dashboard</button>
            </div>
        </div>
    </div>
</div>
