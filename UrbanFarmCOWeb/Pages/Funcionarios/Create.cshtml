@page
@model UrbanFarmCOWeb.Pages.Funcionarios.CreateModel

@{
    ViewData["Title"] = "Cadastrar Funcionário";
    Layout = "_Layout";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center my-4">Cadastro de Funcionário</h2>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Funcionario.Nome" class="form-label">Nome</label>
                    <input asp-for="Funcionario.Nome" class="form-control" />
                    <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Funcionario.CPF" class="form-label">CPF</label>
                    <input asp-for="Funcionario.CPF" class="form-control" />
                    <span asp-validation-for="Funcionario.CPF" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Funcionario.DataNascimento" class="form-label">Data de Nascimento</label>
                    <input asp-for="Funcionario.DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="Funcionario.DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Funcionario.Email" class="form-label">E-mail</label>
                    <input asp-for="Funcionario.Email" type="email" class="form-control" />
                    <span asp-validation-for="Funcionario.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Funcionario.Funcao" class="form-label">Função</label>
                    <input asp-for="Funcionario.Funcao" class="form-control" />
                    <span asp-validation-for="Funcionario.Funcao" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Funcionario.SenhaHash" class="form-label">Senha</label>
                    <input asp-for="Funcionario.SenhaHash" type="password" class="form-control" />
                    <span asp-validation-for="Funcionario.SenhaHash" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Funcionario.DataCadastro" class="form-label">Data de Cadastro</label>
                    <input asp-for="Funcionario.DataCadastro" type="date" class="form-control" />
                    <span asp-validation-for="Funcionario.DataCadastro" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.NivelAcesso" class="form-label">Nível de Acesso</label>
                    <input asp-for="Funcionario.NivelAcesso" type="number" class="form-control" />
                    <span asp-validation-for="Funcionario.NivelAcesso" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-secondary ms-2">Voltar para Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
