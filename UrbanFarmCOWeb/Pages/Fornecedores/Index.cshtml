@{
    ViewData["Title"] = "Index";
    Layout = "Fornecedor";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor[0].DataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Fornecedor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FornecedorID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FornecedorID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FornecedorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
