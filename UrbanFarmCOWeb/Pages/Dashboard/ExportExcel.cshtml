@page
@model UrbanFarmCOWeb.Pages.Dashboard.ExportExcelModel

@{
    ViewData["Title"] = "Exportar para Excel";
    Layout = "_Layout";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center animate__animated animate__fadeInDown">Exportar Dados para Excel</h2>

            <div class="alert alert-info animate__animated animate__fadeInUp" role="alert">
                Os dados foram exportados com sucesso para um arquivo Excel.
            </div>

            <div class="d-flex justify-content-center mt-4">
                <a href="/Dashboard/Dashboard" class="btn btn-outline-primary animate__animated animate__fadeInUp animate__slow">
                    <i class="fas fa-arrow-left"></i> Voltar ao Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Link do Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

@section Scripts {
    <script>
        // Adiciona animação ao botão "Voltar ao Dashboard" ao passar o mouse
        document.querySelector('.btn-outline-primary').addEventListener('mouseenter', function () {
            this.classList.add('animate__pulse');
        });

        document.querySelector('.btn-outline-primary').addEventListener('mouseleave', function () {
            this.classList.remove('animate__pulse');
        });
    </script>
}
