@page
@model UrbanFarmCOWeb.Pages.Login.CadastroModel

@{
    ViewData["Title"] = "Cadastro de Colaborador";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center my-4 animate__animated animate__fadeInDown">
                <h2>Cadastro de Colaborador</h2>
            </div>

            <form method="post" class="animate__animated animate__fadeInUp animate__delay-1s">
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.Nome" class="form-label">Nome</label>
                    <input asp-for="Funcionario.Nome" class="form-control animate__animated animate__fadeIn animate__delay-2s" />
                    <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.CPF" class="form-label">CPF</label>
                    <input asp-for="Funcionario.CPF" class="form-control animate__animated animate__fadeIn animate__delay-2s" />
                    <span asp-validation-for="Funcionario.CPF" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.Email" class="form-label">E-mail</label>
                    <input asp-for="Funcionario.Email" type="email" class="form-control animate__animated animate__fadeIn animate__delay-2s" />
                    <span asp-validation-for="Funcionario.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.DataNascimento" class="form-label">Data de Nascimento</label>
                    <input asp-for="Funcionario.DataNascimento" type="date" class="form-control animate__animated animate__fadeIn animate__delay-2s" />
                    <span asp-validation-for="Funcionario.DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.SenhaHash" class="form-label">Senha</label>
                    <input asp-for="Funcionario.SenhaHash" type="password" class="form-control animate__animated animate__fadeIn animate__delay-2s" />
                    <span asp-validation-for="Funcionario.SenhaHash" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.Funcao" class="form-label">Função</label>
                    <input asp-for="Funcionario.Funcao" class="form-control animate__animated animate__fadeIn animate__delay-2s" />
                    <span asp-validation-for="Funcionario.Funcao" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Funcionario.NivelAcesso" class="form-label">Nível de Acesso</label>
                    <select asp-for="Funcionario.NivelAcesso" class="form-control animate__animated animate__fadeIn animate__delay-2s">
                        <option value="">Selecione um nível de acesso</option>
                        <option value="1">Administrador</option>
                        <option value="2">Usuário Padrão</option>
                    </select>
                    <span asp-validation-for="Funcionario.NivelAcesso" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary w-100 animate__animated animate__pulse animate__infinite">Cadastrar</button>
                </div>
                <div class="form-group mb-3">
                    <button type="button" class="btn btn-secondary w-100 animate__animated animate__fadeInUp animate__delay-3s" onclick="window.location.href='@Url.Page("/Login/Login")'">Voltar para Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
