@page "{email}"
@model UrbanFarmCOWeb.Pages.Login.RedefinirSenhaModel

@{
    ViewData["Title"] = "Redefinir Senha";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Título com animação -->
            <div class="text-center my-4 animate__animated animate__fadeInDown">
                <h2>Redefinir Senha</h2>
            </div>

            <!-- Formulário de redefinição de senha com animações -->
            <form method="post" class="animate__animated animate__fadeInUp animate__delay-1s">
                <div class="form-group mb-3">
                    <label asp-for="NovaSenha" class="form-label">Nova Senha</label>
                    <input asp-for="NovaSenha" type="password" class="form-control animate__animated animate__fadeIn animate__delay-2s" />
                    <span asp-validation-for="NovaSenha" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmarSenha" class="form-label">Confirmar Nova Senha</label>
                    <input asp-for="ConfirmarSenha" type="password" class="form-control animate__animated animate__fadeIn animate__delay-3s" />
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary w-100 animate__animated animate__pulse animate__infinite">Redefinir Senha</button>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-secondary w-100 animate__animated animate__fadeInUp animate__delay-4s" onclick="window.location.href='@Url.Page("/Login/Login")'">Voltar para Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
